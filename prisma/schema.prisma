generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  nickname  String
  age       Int
  city      String
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // UserとCommentの関連を定義
  comments Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Userとの関連を定義
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}